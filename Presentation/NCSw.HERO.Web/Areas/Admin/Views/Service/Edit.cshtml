@model ServiceModel

@{
    //page title
    ViewBag.Title = T("Hero.Admin.Services.Edit").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Services");
}

<form asp-controller="Service" asp-action="Edit" method="post" id="service-form">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Hero.Admin.Services.Edit")
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Hero.Common.BackToList")</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="service-delete" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>
    
    <div asp-validation-summary="All"></div>
    <input asp-for="Id" type="hidden" />

    <div class="content">
        <div class="form-horizontal">
            <div class="panel-group">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="form-group">
                            <div class="col-md-3">
                                <nop-label asp-for="Code" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="Code" />
                                <span asp-validation-for="Code"></span>
                            </div>
                        </div>
                        @(Html.LocalizedEditor<ServiceModel, ServiceLocalizedModel>("service-localized",
                            @<div>
                                <div class="form-group">
                                    <div class="col-md-3">
                                        <nop-label asp-for="@Model.Locales[item].Name" />
                                    </div>
                                    <div class="col-md-9">
                                        <nop-editor asp-for="@Model.Locales[item].Name" />
                                        <span asp-validation-for="@Model.Locales[item].Name"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-3">
                                        <nop-label asp-for="@Model.Locales[item].Description" />
                                    </div>
                                    <div class="col-md-9">
                                        <nop-textarea asp-for="@Model.Locales[item].Description" />
                                        <span asp-validation-for="@Model.Locales[item].Description"></span>
                                    </div>
                                </div>
                                <input type="hidden" asp-for="@Model.Locales[item].LanguageId" />
                            </div>
                            ,
                            @<div>
                                <div class="form-group">
                                    <div class="col-md-3">
                                        <nop-label asp-for="Name" />
                                    </div>
                                    <div class="col-md-9">
                                        <nop-editor asp-for="Name" asp-required="true" />
                                        <span asp-validation-for="Name"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-3">
                                        <nop-label asp-for="Description" />
                                    </div>
                                    <div class="col-md-9">
                                        <nop-textarea asp-for="Description" />
                                        <span asp-validation-for="Description"></span>
                                    </div>
                                </div>
                            </div>
                        ))

                        <div class="form-group">
                            <div class="col-md-3">
                                <nop-label asp-for="ProcessTime" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="ProcessTime" />
                                <span asp-validation-for="ProcessTime"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <nop-label asp-for="Active" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="Active" />
                                <span asp-validation-for="Active"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <nop-label asp-for="DisplayOrder" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="DisplayOrder" />
                                <span asp-validation-for="DisplayOrder"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="service-delete" />
